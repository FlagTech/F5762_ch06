{
    "mcpServers": {
        "shell_helper": {
            "command": "uv",
            "args": [
                "--directory",
                "C:/temp/mcp_test",
                "run",
                "server_shell_helper.py"
            ]
        },
         "google_search": {
            "command": "uv",
            "args": [
                "--directory",
                "C:/temp/mcp_test",
                "run",
                "server_google_search.py"
            ]
        },
        "sse_google_search": {
            "url": "http://localhost:8000/sse"
        },
        "http_google_search": {
            "type": "http",
            "url": "http://localhost:8000/mcp"
        },
        "fetch": {
            "command": "uvx",
            "args": ["mcp-server-fetch"]
        },
        "spotify": {
            "command": "uv",
            "args": [
                "--directory",
                "C:/temp/mcp_test",
                "run",
                "server_spotify.py"
            ],
            "env": {
                "SPOTIFY_CLIENT_ID": "你的 Client id",
                "SPOTIFY_CLIENT_SECRET": "你的 Client secret"
            }
        },
        "gitmcp": {
            "type": "openai",
            "url": "https://gitmcp.io/idosal/git-mcp"
        }
    }
}